<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="228.0" prefWidth="309.0" styleClass="roundedBordersDialog"
            stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dpsoftware.gui.controllers.EyeCareDialogController">

    <GridPane alignment="CENTER" prefHeight="228.0" prefWidth="309.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="185.0" minWidth="10.0" prefWidth="175.33333333333334"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="10.0" prefWidth="79.33333333333334"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label text="Light Dependent Resistor (LDR)"/>
        <Label text="LDR continuous reading" GridPane.rowIndex="1"/>
        <CheckBox fx:id="enableLDR" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false"
                  textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
        <CheckBox fx:id="ldrContinuousReading" mnemonicParsing="false" GridPane.columnIndex="1"
                  GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
        <Label text="Minimum brightness" GridPane.rowIndex="2"/>
        <ComboBox fx:id="minimumBrightness" prefHeight="25.0" prefWidth="86.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
        <Label text="Calibrate LDR" GridPane.rowIndex="3"/>
        <Button fx:id="calibrateLDR" mnemonicParsing="false" prefHeight="25.0" prefWidth="91.0" text="Calibrate"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="okButton" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#saveAndClose"
                text="%fxml.dialog.ok" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets top="15.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="cancelButton" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#close"
                text="%fxml.dialog.cancel" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets top="15.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
</AnchorPane>
