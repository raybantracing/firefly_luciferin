<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="235.0" prefWidth="309.0" styleClass="roundedBordersDialog" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dpsoftware.gui.controllers.EyeCareDialogController">

    <GridPane alignment="CENTER" prefHeight="235.0" prefWidth="309.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.66666666666666" minWidth="10.0" prefWidth="196.66666666666666" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="10.0" prefWidth="72.66666666666666" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <Label text="Light Dependent Resistor (LDR)" />
        <Label text="%fxml.eyecare.ldr.cont.reading" GridPane.rowIndex="1" />
        <CheckBox fx:id="enableLDR" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
        <CheckBox fx:id="ldrContinuousReading" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label text="%fxml.eyecare.ldr.min.bright" GridPane.rowIndex="3" />
        <ComboBox fx:id="minimumBrightness" prefHeight="25.0" prefWidth="86.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="%fxml.eyecare.ldr.calibrate" GridPane.rowIndex="4" />
        <Button fx:id="okButton" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#saveAndClose" text="%fxml.dialog.ok" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="cancelButton" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#close" text="%fxml.dialog.cancel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Button>
      <Button fx:id="calibrateLDR" minWidth="30.0" mnemonicParsing="false" onMouseClicked="#calibrateLDR" text="✔" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" />
      <Button fx:id="resetLDR" alignment="CENTER_RIGHT" minWidth="30.0" mnemonicParsing="false" onMouseClicked="#resetLDR" text="✖" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
      <Label text="%fxml.eyecare.ldr.current.value" GridPane.rowIndex="2" />
      <Label fx:id="ldrLabel" text="-" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
    </GridPane>
</AnchorPane>
